<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Validate address data on billing page.</description>
  <parameter name="firstname" desc="firstname"/>
  <parameter name="lastname" desc="lastname"/>
  <parameter name="address1" desc="address1"/>
  <parameter name="address2" desc="address2"/>
  <parameter name="country" desc="country"/>
  <parameter name="statesState" desc="states state"/>
  <parameter name="city" desc="city"/>
  <parameter name="postalCode" desc="postal code"/>
  <parameter name="phone" desc="phone"/>
  <command name="store" target="css=#dwfrm_billing_billingAddress" value="css_billing"/>
  <command name="waitForElementPresent" target="${css_billing}_addressFields_firstName"/>
  <command name="waitForText" target="${css_billing}_addressFields_firstName" value="@{firstname}"/>
  <command name="assertText" target="${css_billing}_addressFields_lastName" value="@{lastname}"/>
  <command name="assertText" target="${css_billing}_addressFields_address1" value="@{address1}"/>
  <command name="assertText" target="${css_billing}_addressFields_address2" value="@{address2}"/>
  <command name="assertText" target="${css_billing}_addressFields_country option.select-option[selected=&quot;selected&quot;]" value="@{country}"/>
  <command name="assertText" disabled="true" target="${css_billing}_addressFields_states_state option.select-option[selected=&quot;selected&quot;]" value="*@{statesState}*">
    <comment>__Caution:__ Site Genesis currently doesn't select this value if loaded from saved addresses.</comment>
  </command>
  <command name="assertText" target="${css_billing}_addressFields_city" value="@{city}"/>
  <command name="assertText" target="${css_billing}_addressFields_postal" value="@{postalCode}"/>
  <command name="assertText" target="${css_billing}_addressFields_phone" value="@{phone}"/>
</scriptmodule>